<h1>Friends</h1>

<% if user_signed_in? %>
<table class="table table-striped table-bordered table-hover" id="friends">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Instagram</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>
        <td>
          <%= link_to friend.first_name + '' +  friend.last_name, friend %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.instagram %></td>
         <td><%= button_to "Destroy this friend", friend, method: :delete, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
<% else %>
<h1>Hello World! </h1>
Thi is my first rails webpage...

<% end %>
