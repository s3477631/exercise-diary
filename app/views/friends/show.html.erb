<div class="p-5 mb-4 bg-light rounded-3 flex flex-row justify-content-between">
        <div class="flex flex-column">

        <div class="fs-1 fw-bold">
            <%= @friend.first_name %>
            <%= @friend.last_name %>
        </div>

        <div class="fs-4">
             Email: <%= @friend.email %>
        </div>

        <div class="fs-4">
             Phone: <%= @friend.phone %>
         </div>

        <div class="fs-4">
             Instagram: <%= @friend.instagram %>
         </div>
         </div>

        <div class="flex flex-column">
         <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary my-3"  %>
         <%= link_to "Back to friends", friends_path, class: "btn btn-dark my-3"  %>
         <%= button_to "Destroy", @friend, method: :delete, class: "btn btn-danger" %>
           </div>
</div>
