 <div class="input-group mb-3">
    <%= form.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
  </div>

 <div class="input-group mb-3">
    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>

 <div class="input-group mb-3">
    <%= form.text_field :phone, class: "form-control", placeholder: "Phone" %>
  </div>

  <div class="input-group mb-3">
    <%= form.text_field :instagram , class: "form-control", placeholder: "Instagram"%>
  </div>
    <div class="input-group mb-3">
      <%= form.number_field :user_id,
      class: "form-control", value: current_user.id, type: :hidden%>
    </div>


  <div class="d-flex justify-content-end">
    <%= link_to "Cancel", friends_path, class: "btn btn-danger mx-3" %>
