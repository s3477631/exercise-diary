<h1>Exercises</h1>

<% if user_signed_in? %>
<table class="table table-striped table-bordered table-hover" id="friends">
  <thead class="table-dark">
    <tr>
      <th>Exercise Name</th>
      <th>Weight</th>
      <th>Reps</th>
      <th>Sets</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @exercise_templates.each do |exercise_template| %>
    <% if exercise_template.user == current_user %>
      <tr>
        <td>
          <%= link_to exercise_template.exercise_name , exercise_template %>
        </td>
        <td><%= exercise_template.weight %></td>
        <td><%= exercise_template.reps %></td>
        <td><%= exercise_template.sets %></td>
         <td><%= button_to "Destroy this template", exercise_template, method: :delete, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to "New Exercise", new_exercise_template_path, class: "btn btn-secondary" %>
<% else %>
<h1>Hello World! </h1>
Thi is my first rails webpage...

<% end %>
