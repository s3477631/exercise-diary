<div class="p-5 mb-4 bg-light rounded-3 flex flex-row justify-content-between">
        <div class="flex flex-column">
        <div class="fs-1 fw-bold">
            <%= @exercise_template.exercise_name %>
        </div>

        <div class="fs-4">
             Weight: <%= @exercise_template.weight %> (kg)
        </div>

        <div class="fs-4">
             Reps: <%= @exercise_template.reps %>
         </div>

        <div class="fs-4">
            Sets: <%= @exercise_template.sets %>
         </div>
         </div>

        <div class="flex flex-column">
         <%= link_to "Edit this Exercise template", edit_exercise_template_path(@exercise_template), class: "btn btn-secondary my-3"  %>
         <%= link_to "Back to Exercise templates", exercise_templates_path, class: "btn btn-dark my-3"  %>
         <%= button_to "Destroy", @exercise_template, method: :delete, class: "btn btn-danger" %>
         <%= form_with(model: @routine) do |form| %>

         <div class="d-flex justify-content-end">
           <%= form.submit class:'btn btn-success', method: :post %>
         </div>
           <% end %>
     </div>
</div>

